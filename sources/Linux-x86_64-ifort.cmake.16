add_definitions(-DAMD64 -Di386 -DLINUX_X86_64 -DLittle_Endian)

set(CMAKE_C_COMPILER "icc")
set(CMAKE_Fortran_COMPILER "ifort")

set(MPI_C_COMPILER "mpicc")
set(MPI_Fortran_COMPILER "mpif90")

set(CMAKE_C_FLAGS "-Wl,--allow-shlib-undefined -Wtrigraphs -fpic -I. -traceback -msse3 -fp-model precise -D_REENTRANT -D_THREAD_SAFE -openmp -DWITH_intel -DAMD64 -DLINUX_X86_64 -DWITH_OpenMP" CACHE STRING "C compiler flags" FORCE)

set(MPI_C_COMPILE_FLAGS "-Wl,--allow-shlib-undefined -Wtrigraphs -fpic -I. -traceback -msse3 -D_REENTRANT -D_THREAD_SAFE -openmp -mpi -DLittle_Endian -DWITH_intel -DAMD64 -DLINUX_X86_64 -DWITH_OpenMP" "C compiler flags" FORCE)

set(CMAKE_Fortran_FLAGS "-assume byterecl -convert big_endian -msse3 -fpe0 -fpic -reentrancy threaded -traceback -threads -I.  -static-intel -O2 -openmp -diag-disable 7713 -diag-disable 10212 -diag-disable 5140 -mkl -fp-model source" CACHE STRING "Fortran compiler flags" FORCE)

set(MPI_Fortran_COMPILE_FLAGS "-mpi" FORCE)

set(MPI_Fortran_COMPILE_FLAGS "${MPI_Fortran_COMPILE_FLAGS} ${CMAKE_Fortran_FLAGS}" CACHE STRING "Fortran compiler flags")

set(CMAKE_EXE_LINKER_FLAGS "-assume byterecl -convert big_endian -fpic -static-intel -mkl")

