#include "msg.h"

   !> Maximum length of a variable name in the data file
   integer, parameter, public :: VGD_LEN_NAME = 4
   !> Method return value on success
   integer, parameter, public :: VGD_OK = 0
   !> Method return value on error
   integer, parameter, public :: VGD_ERROR = -1
   !> String length of etiket
   integer, parameter, public :: VGD_LEN_ETIK = 12
   !> String length of reference field "RFLD"
   integer, parameter, public :: VGD_LEN_RFLD = 4
