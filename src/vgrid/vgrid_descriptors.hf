   integer, parameter, public :: VGD_LEN_RFLS = 4
   !> Missing value returned for invalid entries
   real, parameter, public :: VGD_MISSING = -9999.0
   !> Output messages prefix string
   character(len = 6), parameter, public :: VGD_PRFX = "(vgd) "
   !> Empty NOMVAR string
   character(len = VGD_LEN_RFLD), parameter, public :: VGD_NO_REF_NOMVAR = "    "
